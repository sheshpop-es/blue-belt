---
const {nombre} = Astro.props
---

<div >
    <div class="rectangulo" >
        <div class="txt">{nombre}</div>
    </div>
</div>



<style>
.rectangulo {
    background-color: #1E1E1E;
    padding: 20px;
    display: inline-block; 
    position: absolute;
    left: 31%;
    width: 24px;
    height: 130px;
}

.rectangulo .txt{
    color: white;
    position: relative;
    top: 50%;
    transform: rotate(-90deg);
    color: white;
    font-family: Helvetica;
    font-size: 25px;
}

.rectangulo p {
    margin: 0; 
        }
</style>